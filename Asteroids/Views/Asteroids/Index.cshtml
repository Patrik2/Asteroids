@model IEnumerable<Asteroids.Models.Asteroid>

@{
    ViewBag.Title = "Asteroids";
}

<h2>Asteroids</h2>

<style>
    th,td{ text-align: center;}
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th >
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.File)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td  style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Profit)
        </td>
        <td  style="vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td  style="vertical-align: middle; text-align:center;">
            <img src="data:image/png;base64,@item.FileDateBase64" width="300" height="200" style="align-items:center"/>
        </td>
        <td  style="vertical-align: middle;">
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
